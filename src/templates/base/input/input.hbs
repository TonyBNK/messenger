<label
    for="{{name}}"
    class="{{#if classNameLabel}}{{classNameLabel}}{{else}}field-title{{/if}}"
>
    {{label}}
</label>
<input
    class="{{#if classNameInput}}{{classNameInput}}{{else}}field-input{{/if}}"
    type="{{type}}"
    name="{{name}}"
    id="{{name}}"
    value="{{value}}"
    {{#if required}}required{{/if}}
    {{#if autofocus}}autofocus{{/if}}
>
